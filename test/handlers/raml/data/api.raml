#%RAML 1.0
title: Demo App
version: 1.0.0
baseUri: http://demo-app.com{version}
protocols: [HTTP, HTTPS]
types:
  Account: !include types/Account.raml
  Application: !include types/Application.raml
  Group: !include types/Group.raml
  User: !include types/User.raml
/accounts:
  get:
    description: Get a list of all accounts
    responses:
      200:
        body:
          application/json:
            type: Account[]
            example: !include examples/Accounts.json
  post:
    description: Create a account
    body:
      application/json:
        type: Account
    responses:
      201:
        body:
          application/json:
            type: Account
            example: !include examples/Account.json
  /{accountId}:
    get:
      description: Get an instance of account based on it's id.
      responses:
        200:
          body:
            application/json:
              type: Account
              example: !include examples/Account.json
    put:
      description: Update an instance of account.
      body:
        application/json:
          type: Account
      responses:
        200:
          body:
            application/json:
              type: Account
              example: !include examples/Account.json
    delete:
      description: Delete an instance of account based on it's id.
      responses:
        204:
